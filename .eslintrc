{
  "extends": [
    "airbnb",
    "plugin:jest/recommended"
  ],
  "root": true,
  "plugins": [
    "jest",
    "react"
  ],
  "rules": {
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "import/no-unresolved": "off",
    "import/extensions": "off"
  },
  "env": {
    "es6": true,
    "jest/globals": true,
    "browser": true,
    "webextensions": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "fetch": false
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  }
}